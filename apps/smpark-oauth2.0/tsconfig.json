{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "type": "module",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/adapters/controllers/*"],
      "@usecases/*": ["src/application/usecases/*"],
      "@entities/*": ["src/domain/entities/*"],
      "@domain-services/*": ["src/domain/services/*"],
      "@app-services/*": ["src/application/services/*"],
      "@infra-services/*": ["src/infrastructure/services/*"],
      "@configs/*": ["src/configs/*"],
      "@utils/*": ["src/utils/*"],
      "@dtos/*": ["src/adapters/dtos/*"],
      "@mapper/*": ["src/adapters/mapper/*"],
      "@repository/*": ["src/infrastructure/repository/*"],
      "@infra-handlers/*": ["src/infrastructure/handlers/*"],
      "@database/*": ["src/infrastructure/database/*"],
      "@adapters-interfaces/*": ["src/adapters/interfaces/*"],
      "@domain-interfaces/*": ["src/domain/interfaces/*"],
      "@application-interfaces/*": ["src/application/interfaces/*"],
      "@infra-interfaces/*": ["src/infrastructure/interfaces/*"],
      "@middleware/*": ["src/middleware/*"],
      "@routes/*": ["src/routes/*"],
      "@enums/*": ["src/types/union/*"],
      "@lib/*": ["src/types/lib/*"],
      "@errors/*": ["src/types/errors/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
