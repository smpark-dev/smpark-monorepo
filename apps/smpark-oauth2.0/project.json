{
  "name": "smpark-oauth2.0",
  "version": "1.0.0",
  "private": true,
  "sourceRoot": "apps/smpark-oauth2.0",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env NODE_ENV=development nodemon --config apps/smpark-oauth2.0/nodemon.json"
      }
    },
    "prod": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "production",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "smpark-oauth2.0:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "smpark-oauth2.0:build:development"
        },
        "staging": {
          "buildTarget": "smpark-oauth2.0:build:staging"
        },
        "production": {
          "buildTarget": "smpark-oauth2.0:build:production"
        }
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "src/index.ts",
        "outputPath": "dist",
        "outputFileName": "apps/smpark-oauth2.0/index.js",
        "tsConfig": "apps/smpark-oauth2.0/tsconfig.app.json",
        "format": ["esm"],
        "bundle": true,
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/smpark-oauth2.0/src/views",
            "output": "apps/smpark-oauth2.0/src/views"
          },
          {
            "glob": "**/*",
            "input": "apps/smpark-oauth2.0/src/public",
            "output": "apps/smpark-oauth2.0/src/public"
          }
        ],
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false,
          "define": {
            "process.env.NODE_ENV": "'development'"
          }
        },
        "staging": {
          "minify": true,
          "define": {
            "process.env.NODE_ENV": "'staging'"
          }
        },
        "production": {
          "minify": true,
          "define": {
            "process.env.NODE_ENV": "'production'"
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/smpark-oauth2.0/src/**/*.ts"]
      }
    },
    "build:staging": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn nx build:staging smpark-oauth2.0",
          "yarn nx docker:staging-build smpark-oauth2.0",
          "yarn nx docker:staging-push smpark-oauth2.0"
        ],
        "parallel": false
      }
    },
    "build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn nx build smpark-oauth2.0",
          "yarn nx docker:prod-build smpark-oauth2.0",
          "yarn nx docker:prod-push smpark-oauth2.0"
        ],
        "parallel": false
      }
    },
    "docker:staging-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.staging.yml --env-file apps/smpark-oauth2.0/.env.staging build"
      }
    },
    "docker:staging-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.staging.yml --env-file apps/smpark-oauth2.0/.env.staging push"
      }
    },
    "docker:staging-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.staging.yml --env-file apps/smpark-oauth2.0/.env.staging up -d"
      }
    },
    "docker:staging-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.staging.yml --env-file apps/smpark-oauth2.0/.env.staging down"
      }
    },
    "docker:staging-pull": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.staging.yml --env-file apps/smpark-oauth2.0/.env.staging pull"
      }
    },
    "docker:prod-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.yml --env-file apps/smpark-oauth2.0/.env.production build"
      }
    },
    "docker:prod-push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.yml --env-file apps/smpark-oauth2.0/.env.production push"
      }
    },
    "docker:prod-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.yml --env-file apps/smpark-oauth2.0/.env.production up -d"
      }
    },
    "docker:prod-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.yml --env-file apps/smpark-oauth2.0/.env.production down"
      }
    },
    "docker:prod-pull": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose -f apps/smpark-oauth2.0/docker-compose.yml --env-file apps/smpark-oauth2.0/.env.production pull"
      }
    }
  }
}
